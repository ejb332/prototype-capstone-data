<h1>Edit User Details</h1>
<%= form_tag "/user/#{@user.id}", method: :patch do %>
  <div class="form-group">
    <%= label_tag :name %>
    <%= text_field_tag :name, @user.name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= label_tag :email %>
    <%= text_field_tag :email, @user.email, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= label_tag :mobile_number %>
    <%= text_field_tag :mobile_number, @user.mobile_number, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= label_tag :password %>
    <%= text_field_tag :password, "", class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= label_tag :password_confirmation %>
    <%= text_field_tag :password_confirmation, "", class: 'form-control' %>
  </div>
  <div>
    <%= submit_tag "Edit User", class: 'btn btn-success' %>
  </div>
<% end %>
<%= form_tag "/destinations", method: :get do %>
  <%= submit_tag "Cancel", class: 'btn btn-danger' %>
<% end %>