<h1>Add Destination To Itinerary</h1>
<%= form_tag "/destinations", method: :post do %>
  <div class="form-group">
    <%= label_tag :city %>
    <%= text_field_tag :city, "", class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= label_tag :state %>
    <%= text_field_tag :state, "", class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= label_tag :zip %>
    <%= text_field_tag :zip, "", class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= label_tag :start_date %>
    <%= text_field_tag :start_date, "", class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= label_tag :end_date %>
    <%= text_field_tag :end_date, "", class: 'form-control' %>
  </div>
  <div>
    <%= submit_tag "Add Destination", class: 'btn btn-success' %>
  </div>
<% end %>
<%= form_tag "/destinations", method: :get do %>
  <%= submit_tag "Cancel", class: 'btn btn-danger' %>
<% end %>