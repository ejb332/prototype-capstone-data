<h1>Edit Destination Details</h1>
<%= form_tag "/destinations/#{@destination.id}", method: :patch do %>
  <div class="form-group">
    <%= label_tag :city %>
    <%= text_field_tag :city, @destination.city, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= label_tag :state %>
    <%= text_field_tag :state, @destination.state, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= label_tag :zip %>
    <%= text_field_tag :zip, @destination.zip, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= label_tag :country %>
    <%= text_field_tag :country, @destination.country, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= label_tag :start_date %>
    <%= text_field_tag :start_date, @destination.date_pretty_start, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= label_tag :end_date %>
    <%= text_field_tag :end_date, @destination.date_pretty_end, class: 'form-control' %>
  </div>
  <div>
    <%= submit_tag "Edit Destination", class: 'btn btn-success' %>
  </div>
<% end %>
<%= form_tag "/destinations", method: :get do %>
  <%= submit_tag "Cancel", class: 'btn btn-danger' %>
<% end %>