<h1>Add Clothing Item To Inventory</h1>
<%= form_tag "/items", method: :post do %>
  <div class="form-group">
    <%= label_tag :name %>
    <%= text_field_tag :name, "", class: 'form-control' %>
  </div>
  <div>
    <%= submit_tag "Add Clothing Item", class: 'btn btn-success' %>
  </div>
<% end %>
<%= form_tag "/items", method: :get do %>
  <%= submit_tag "Cancel", class: 'btn btn-danger' %>
<% end %>