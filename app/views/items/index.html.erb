<div>
  <% @categories.each do |category| %>
    <div class="cat-name">
      <h1><%= category.name %></h1>
    </div>
        <% category.items.where(user_id: current_user.id).each do |item| %>
        <div class="container">
          <div class="flex">
          <h4><%= item.name %></h4>
            <div class="del-btn">
            <button class="btn btn-sm btn-danger"><%= link_to "Delete", "/items/#{item.id}", method: :delete %></button>
            </div>
          </div>
        </div>
    <% end %>
  <% end %>
</div>
<hr>
<div>
  <form action="/items/new">
    <button class="btn btn-success">Add new item</button>
  </form>
</div>